server {
    listen 80;
    listen [::]:80;
    server_name {{ server_name }};

    access_log /var/log/nginx/{{ app_name }}.access_log main_color;
    error_log /var/log/nginx/{{ app_name }}.error_log;
    
    # ACME http-01
    location ^~ /.well-known/acme-challenge/ {
        root /var/www/letsencrypt;
        default_type "text/plain";
    }

    location = /nginx_health { return 200 "OK"; add_header Content-Type text/plain; }

    location / {
        proxy_pass         http://{{ app_name }}_upstream;
        proxy_http_version 1.1;
        proxy_set_header   Upgrade $http_upgrade;
        proxy_set_header   Connection "upgrade";
        proxy_set_header   Host $host;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_read_timeout 120;
    }
}
